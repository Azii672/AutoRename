{
    "name": "AutoRename",
    "version": "1.0",
    "description": "Rename files in a much cleaner way.",
    "manifest_version": 2,
    "icons": {
        "48": "/assets/icons8-edit-image-48.png"
    },
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "AutoRename"
    },
    "background": {
        "scripts": ["src/saveImageEvent.js"],
        "persistent": false
    },

    "options_page": "options.html",

    "permissions":[
        "storage",
        "contextMenus",
        "fileSystem",
        "downloads"
    ]
}