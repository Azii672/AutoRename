{
    "name": "Auto Renamer",
    "version": "1.0",
    "manifest_version": 2,
    "options_page": "options.html",
    "icons": {
        "48":"assets/icons8-edit-image-48.png"
    },
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "Auto Rename"
    },

    "background": {
        "scripts": ["js/saveImageEvent.js"],
        "persistent": false
    },

    "permissions":[
        "storage",
        "contextMenus",
        "fileSystem",
        "downloads"
    ]
}